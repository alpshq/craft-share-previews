{% import '_includes/forms' as forms %}

<div class="p-4 bg-blue-gray-100 rounded" data-layer="{{ layer.type }}">
    <h3 class="m-0 mb-2">
        {{ layer.getTitle() }}
    </h3>
    <div class="mb-6">
        {% block description %}{% endblock %}
    </div>

    {{ forms.hidden({
        name: namePrefix ~ '[type]',
        value: layer.type,
    }) }}

    {% block fields %}{% endblock %}

    {% if (padding ?? true) %}
        <div class="field">
            <div class="heading font-bold">
                {{ "Padding"|t('share-previews') }}
            </div>
            <div class="instructions mb-6">
                <p>{{ "Set the padding for each side. Set each side to 0 if you want the area to go from edge to edge." }}</p>
            </div>

            <div class="text-center">
                <div class="flex justify-center">
                    {{ forms.field({
                        label: "Top"|t('share-previews'),
                    }, forms.text({
                        name: namePrefix ~ '[paddingTop]',
                        type: 'number',
                        min: 0,
                        max: 1200,
                        unit: 'px',
                    })) }}
                </div>
                <div class="flex justify-center">
                    <div class="pr-16">
                        {{ forms.field({
                            label: "Left"|t('share-previews'),
                        }, forms.text({
                            name: namePrefix ~ '[paddingLeft]',
                            type: 'number',
                            min: 0,
                            max: 1200,
                            unit: 'px',
                        })) }}
                    </div>
                    <div>
                        {{ forms.field({
                            label: "Right"|t('share-previews'),
                        }, forms.text({
                            name: namePrefix ~ '[paddingRight]',
                            type: 'number',
                            min: 0,
                            max: 1200,
                            unit: 'px',
                        })) }}
                    </div>
                </div>
                <div class="flex justify-center">
                    {{ forms.field({
                        label: "Bottom"|t('share-previews'),
                    }, forms.text({
                        name: namePrefix ~ '[paddingBottom]',
                        type: 'number',
                        min: 0,
                        max: 1200,
                        unit: 'px',
                    })) }}
                </div>
            </div>
        </div>
    {% endif %}
</div>